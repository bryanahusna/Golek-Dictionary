<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SplashScreen">
    <RelativeLayout
        android:layout_above="@id/banner_splashscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_ikon_golek" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner_splashscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="50dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_toLeftOf="@id/LAMK2019"
            android:src="@drawable/si_moki"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/LAMK2019"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lamk2019" />

        <ImageView
            android:layout_toRightOf="@id/LAMK2019"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/tutwuri2018" />
    </RelativeLayout>

</RelativeLayout>